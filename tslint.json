{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true
    ],
    "interface-name": [
      false
    ],
    "ordered-imports": [
      false,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "no-shadowed-variable": [
      true,
      {
        "state": false,
        "class": true,
        "enum": true,
        "function": true,
        "interface": false,
        "namespace": true,
        "typeAlias": false,
        "typeParameter": false
      }
    ],
    "no-var-keyword": true, // 关键字var
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ], // 行内检测
    "no-trailing-whitespace": false, // 尾部空格检测
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ], // 空格在其他部分的设置
    "comment-format": [
      true,
      "check-space"
    ], // 注释行中的空格
    "no-angle-bracket-type-assertion": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "no-console": [false, "log", "error"],
    "arrow-parens": false,
    "quotemark": false, // 强制规定引用时必须使用单引号
    "prefer-const": false, // const偏好
    // Pending fix for shorthand property names.
    "object-literal-sort-keys": false
  },
  "rulesDirectory": []
}
